<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#69B8BB</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">#D9D8DE</item>
        <item name="colorPrimaryDark">#69B8BB</item>
        <!-- AppCompatEditText选择的底线颜色 -->
        <item name="colorControlActivated">#69B8BB</item>

    </style>



    <style name="toolbar_text" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">

        <item name="android:textSize">14sp</item>
        <!--<item name="app:tabTextColor">#ffffff</item>-->
        <item name="android:textColor">#ffffff</item>

    </style>

    <style name="transparentText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor" >#00000000</item>

    </style>
    <style name="ToolBarTitleText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item></style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TipsZanTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/cb_zan</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>

    </style>
</resources>
