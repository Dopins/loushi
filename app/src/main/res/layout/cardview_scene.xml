<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <View
            android:background="@color/colorDetail"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/date"
            android:text="今天"
            android:textColor="@color/colorDetail"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <View
            android:background="@color/colorDetail"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp"/>
    </LinearLayout>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        card_view:cardBackgroundColor="@color/colorWhite"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="3dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/card_image"
            android:background="@drawable/loading_big"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="210dp" />
        <TextView
            android:id="@+id/card_title"
            android:text="标题"
            android:maxLines="1"
            android:textColor="@color/colorTitle"
            android:ellipsize="end"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/card_detail"
            android:text="详细"
            android:textColor="@color/colorDetail"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />
            <View
                android:background="@color/colorLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:paddingLeft="20dp"
                android:paddingRight="19dp"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <LinearLayout
                    android:id="@+id/btn_prefer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:id="@+id/checkbox_prefer"
                        android:clickable="false"
                        android:layout_gravity="center"
                        android:layout_marginRight="15dp"
                        android:button="@drawable/selector_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/num_prefer"
                        android:text="0"
                        android:layout_gravity="center"
                        android:textColor="@color/colorWatch"
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="点赞"
                        android:layout_gravity="center"
                        android:textColor="@color/colorWatch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                    <ImageView
                        android:id="@+id/image_watch"
                        android:background="@drawable/view"
                        android:layout_gravity="center"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/num_watch"
                        android:text="0"
                        android:textColor="@color/colorWatch"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="浏览"
                        android:layout_gravity="center"
                        android:textColor="@color/colorWatch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/publish_time"
                        android:layout_gravity="center"
                        android:textColor="@color/colorDate"
                        android:text="2016/06/30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>