<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="32dp"
    android:paddingRight="32dp">

    <TextView
        android:id="@+id/text_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="手机 "
        android:textColor="@color/dark_gray"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/regist_edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_phone"
        android:text="18819475167"
        android:ems="13"
        android:inputType="phone"
        android:singleLine="true"/>


    <TextView
        android:id="@+id/text_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码 "
        android:textColor="@color/dark_gray"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/regist_edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_keyword"
        android:ems="10"
        android:text="l123321"
        android:inputType="textPassword"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/text_cheakword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证码 "
        android:textColor="@color/dark_gray"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_cheakword"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/regist_edit_checkword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="88888.8"
            android:ems="10"
            android:singleLine="true"/>

        <Button
            android:id="@+id/btn_getcheckword"
            android:layout_width="94dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:background="@drawable/shape_btn_checkword"
            android:text="获取验证码"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="246dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_btn_finish"
        android:text="完成"
        android:textColor="@color/colorWhite"
        android:textSize="15dp" />

</LinearLayout>