<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/item_imageView_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/temp_icon"
        android:layout_marginRight="16dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_imageView_message"
        android:orientation="vertical">


        <TextView
            android:id="@+id/item_textView_messageUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提利昂"
            android:layout_marginBottom="2dp"
            android:textColor="#4D4D4D"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_textView_messageContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="15"
            android:maxLength="10"
            android:singleLine="true"
            android:text="提利昂提利昂提利昂提利昂提利昂提利昂提利昂提利昂提利昂提利昂提利昂"
            android:textColor="#A2A2A2"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_textView_messageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:09"
            android:textColor="#80000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_textView_messageDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="刚刚"
            android:textColor="#A2A2A2"
            android:textSize="12sp" />


    </LinearLayout>


</RelativeLayout>