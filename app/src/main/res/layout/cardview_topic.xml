<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp">
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="3dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/card_image"
                android:background="@drawable/loading_middle"
                android:scaleType="fitXY"
                android:layout_width="130dp"
                android:layout_height="150dp" />
            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:id="@+id/card_title"
                        android:textSize="15sp"
                        android:text="标题"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorTitle"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@id/date"
                        android:text="2016/7/20"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/colorDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:id="@+id/card_detail"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/colorDetail"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="详细"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp" />
                <View
                    android:background="@color/colorLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:paddingLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <LinearLayout
                        android:id="@+id/btn_prefer"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <CheckBox
                            android:id="@+id/checkbox_prefer"
                            android:clickable="false"
                            android:layout_gravity="center"
                            android:layout_marginRight="15dp"
                            android:button="@drawable/selector_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/num_prefer"
                            android:text="0"
                            android:layout_gravity="center"
                            android:textColor="@color/colorWatch"
                            android:layout_marginRight="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="点赞"
                            android:layout_gravity="center"
                            android:textColor="@color/colorWatch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/image_watch"
                        android:background="@drawable/view"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/num_watch"
                        android:text="0"
                        android:textColor="@color/colorWatch"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="浏览"
                        android:layout_gravity="center"
                        android:textColor="@color/colorWatch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>