<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <android.support.v7.widget.Toolbar
        android:id="@+id/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <ImageButton
            android:id="@+id/btn_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/colorPrimary"
            android:src="@drawable/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btn_return"
            android:layout_marginLeft="30dp"
            android:text="个人资料"
            android:textColor="@color/colorWhite"
            android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注销"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:textColor="@color/colorWhite"
                android:textSize="16dp" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="31dp"
        android:paddingRight="31dp"
        android:paddingTop="33dp">

    <com.loushi.test.CircularImageView
        android:id="@+id/image_circular"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/tab_my" />

    <LinearLayout
        android:id="@+id/layout_nickname"
        android:layout_below="@+id/image_circular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="@color/dark_gray" />

        <com.loushi.test.UnderLineEditText
            android:id="@+id/edit_nickname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="15dp"
            android:hint="Jordin Spark"
            android:textColor="@color/hint"
            android:textColorHint="@color/hint"
            android:lineSpacingMultiplier="2"
            android:background="@null"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_sex"
        android:layout_below="@+id/layout_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textColor="@color/dark_gray" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/hint" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="35dp"
                android:background="@color/hint"></View>
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_school"
        android:layout_below="@+id/layout_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在高校"
            android:textColor="@color/dark_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.5">

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hint" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="35dp"
                    android:background="@color/hint"></View>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_marginLeft="20dp">

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hint" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="35dp"
                    android:background="@color/hint"></View>
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_phone"
        android:layout_below="@+id/layout_school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机"
            android:textColor="@color/dark_gray" />

        <com.loushi.test.UnderLineEditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="15dp"
            android:hint="13728384943"
            android:background="@null"
            android:lineSpacingMultiplier="2"
            android:textColorHint="@color/hint" />
    </LinearLayout>

    <Button
        android:layout_width="297dp"
        android:layout_height="46dp"
        android:id="@+id/btn_save"
        android:layout_below="@+id/layout_phone"
        android:text="保持修改"
        android:textSize="15dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/shape_btn_finish"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"/>

</RelativeLayout>


</LinearLayout>
